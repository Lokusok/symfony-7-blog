{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
    <div class="d-flex flex-column gap-3">
        {% for article in articles %}
            <div class="card">
                <div class="card-header">
                    {{ article.title }}
                </div>

                <div class="card-body">
                    {{ article.content | slice(0, 50) ~ '...' }}
                </div>

                <div class="card-footer">
                    <a href="{{ path('articles.show', { id: article.id }) }}" class="btn btn-primary">
                        Read article
                    </a>
                </div>
            </div>
        {% else %}
            <h3 class="fs-3 fw-bold">There is no articles...</h3>
        {% endfor %}
    </div>
{% endblock %}